{
  "name": "my-workspace",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "lint": "eslint 'packages/**/src/**/*.ts'",
    "format": "prettier --write 'packages/**/src/**/*.ts'",
    "start:auth": "ts-node packages/auth-service/src/app.ts",
    "start:user": "ts-node packages/user-service/src/app.ts",
    "start:room": "ts-node packages/room-service/src/app.ts",
    "start": "concurrently \"npm run start:auth\" \"npm run start:user\" \"npm run start:room\""
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/express": "^4.17.21",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.57.0",
    "nodemon": "^2.0.12",
    "prettier": "^3.2.5",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-gateway": "^0.0.1",
    "joi": "^17.13.1",
    "jsonwebtoken": "^9.0.2",
    "mkdirp": "^3.0.1",
    "mongoose": "^6.0.12",
    "winston": "^3.13.0",
    "winston-mongodb": "^5.1.1"
  }
}